<Window x:Class="_03Dockpanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03Dockpanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="247*"/>
            <ColumnDefinition Width="271*"/>
        </Grid.ColumnDefinitions>
        
        <DockPanel LastChildFill="false">
            <Button Content="Egy gomb" DockPanel.Dock="Bottom"/>
            <Button Content="Egy gomb" DockPanel.Dock="Left"/>
            <Button Content="Egy gomb" DockPanel.Dock="Top"/>
            <Button Content="Egy gomb" DockPanel.Dock="Right"/>
        </DockPanel>
        <GridSplitter Grid.Column="0" Width="10" ResizeBehavior="PreviousAndNext"/>
        <WrapPanel Grid.Column="1">
            <Button Content="vrapp"/>
            <Button Content="vrapp"/>
            <Button Content="vrapp"/>
            <Button Content="vrapp"/>
        </WrapPanel>
    </Grid>
</Window>
